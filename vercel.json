{
    "functions": {
        "api/.php": {
        "runtime": "vercel-php@0.6.2"
        }
    },
    "routes": [
        {
            "src": "/",
            "dest": "/public/index.php"
        },
        {
            "src": "/styles.css",
            "dest": "/public/styles.css"
        },
        {
            "src": "/assets/icon.ico",
            "dest": "/public/assets/icon.ico"
        }
    ],
    "crons": [
        {
            "path": "/api/cleanup.php",
            "schedule": "0 0 * * *"
        }
    ]
}