{
    "functions": {
        "api/*.php": {
            "runtime": "vercel-php@0.6.2"
        }
    },
    "routes": [
        {
            "src": "/api/index.php",
            "dest": "/api/index.php"
        },
        {
            "src": "/styles.css",
            "dest": "/public/styles.css"
        },
        {
            "src": "/assets/icon.ico",
            "dest": "/public/assets/icon.ico"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.php"
        }
    ],
    "crons": [
        {
            "path": "/api/cleanup.php",
            "schedule": "*/1 * * * *"
        }
    ]
}
